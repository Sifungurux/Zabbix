Vagrant.configure("2") do |redhat|
  redhat.vm.box = "centos/7"
  redhat.vm.define "zabbix"
  redhat.vm.hostname = "zabbix"
  redhat.vm.network "private_network", ip: "192.168.77.201"
  redhat.vm.provision :ansible do |ansible|
     ansible.limit = "all"
     #ansible.inventory_path = "test/hosts/vagrant"
     ansible.playbook = "main.yml"
     ansible.host_vars = {
       "zabbix" => {"note" => "This is s figlet server running CentOS"}
     }
     ansible.groups = {
       "PRODUCTION" => ["zabbix"],
       "PRODUCTION:vars" => {"env" => "PRE-PRODUCTION", "warn" => "This is a pre-prod server - Think about what you are doing and BE CAREFULL"}
      }
  end
end

